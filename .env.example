# Supabase Configuration
# The daemon uses the anon key and authenticates as the user (respects RLS)
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your_anon_key_here

# OpenAI Configuration (for AI summaries and keyword extraction)
# If not set, the daemon will use a simplified fallback mechanism
OPENAI_API_KEY=sk-your_openai_api_key_here

# Development Mode
# Set to 'true' to use fallback summarization instead of OpenAI API
# This is useful for development to avoid API costs and rate limits
# Default: false
DEVELOPMENT=false

# Claude Code Home Directory (optional)
CLAUDE_CODE_HOME=

# Periodic Sync Interval (in milliseconds)
# How often to check for new session data and upload it
# Default: 600000 (10 minutes)
PERIODIC_SYNC_INTERVAL_MS=600000

# Session History Lookback Period (in days)
# How far back to look for sessions when uploading and processing
# Default: 30 (1 month)
SESSION_LOOKBACK_DAYS=30
